# Check bit shifts
test("
@export
def test(x int) {
  x = x << x
  x = x >> x
  x = x >>> x
  x <<= x
  x >>= x
  x >>>= x
}
", "
public class in_int
{
    public static int unsignedRightShift(int self, int x)
    {
        return (int)unchecked((uint)self >> x);
    }
}

public class Globals
{
    public static void test(int x)
    {
        x = x << x;
        x = x >> x;
        x = in_int.unsignedRightShift(x, x);
        x <<= x;
        x >>= x;
        x = in_int.unsignedRightShift(x, x);
    }
}
").csharp

