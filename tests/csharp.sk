# Test lambda conversion with scope capture and currying
test("
@export
class Foo {
  var value = 0

  def test(x int) int {
    var y = 0
    var f = (a int) => => (b int) => => value + x + y + a + b
    return f(1)()(2)()
  }
}
", "
public class Foo
{
    public int value = 0;

    public int test(int x)
    {
        int y = 0;
        System.Func<int, System.Func<System.Func<int, System.Func<int>>>> f = (int a) =>
        {
            return () =>
            {
                return (int b) =>
                {
                    return () =>
                    {
                        return this.value + x + y + a + b;
                    };
                };
            };
        };
        return f(1)()(2)();
    }

    public Foo()
    {
        this.value = 0;
    }
}
").csharp

